{
  "packages": {
    ".": {
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "extra-files": [
        {
          "type": "json",
          "path": "wails.json",
          "jsonpath": "$.info.productVersion"
        },
        {
          "type": "json",
          "path": "frontend/package.json",
          "jsonpath": "$.version"
        },
        {
          "type": "regex",
          "path": "flake.nix",
          "replacements": [
            {
              "pattern": "version = \"[^\"]*\";",
              "replacement": "version = \"${version}\";"
            }
          ]
        }
      ]
    }
  }
}
