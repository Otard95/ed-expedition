{
  "packages": {
    ".": {
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "pull-request-title-pattern": "chore(release): ${version}",
      "extra-files": [
        {
          "type": "json",
          "path": "wails.json",
          "jsonpath": "$.info.productVersion"
        },
        {
          "type": "json",
          "path": "frontend/package.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
